<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#3A3232" android:startColor="#3A3232" android:type="linear"/>
                    <corners android:radius="10dp"/>

                    <padding android:bottom="3dp" android:left="10dp" android:right="10dp" android:top="3dp"/>
                </shape>
            </item>
            <item
                android:left="200dp"
                android:right="0dp"
                android:bottom="5dp">

                <bitmap
                    android:src="@drawable/expand_more_24"
                    android:gravity="right|bottom" />

            </item>

        </layer-list>
    </item>

</selector>